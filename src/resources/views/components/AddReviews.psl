<div
   class="col-sm-12 col-md-6 wow fadeInUp"
   data-wow-duration="0.8s"
   data-wow-delay="0.2s">
      <form
         id="reviewForm"
         class="single-form quate-form wow fadeInUp"
         data-toggle="validator">
      <div
         id="reviewMsgSubmit"
         class="h3 text-center hidden"></div>
      <div class="row">
         <div class="col-sm-12">
            <input
               name="fullname"
               class="contact-email form-control"
               type="text"
               placeholder="Full name"
               required />
         </div>

         <div class="col-sm-12">
            <input
               name="profile_url"
               class="contact-subject form-control"
               type="url"
               placeholder="Your profile link"
               required />
         </div>
         
         <input
            name="avatar"
            id="avatar"
            type="file"
            accept="image/*"
            required
            hidden />
         
         <div class="col-sm-12">
            <input
               class="contact-name form-control"
               id="select-avatar"
               type="text"
               placeholder="Select an Avatar" />
         </div>

         <div class="col-sm-12">
            <textarea
               name="message"
               class="contact-message"
               rows="6"
               placeholder="Your review message"
               required></textarea>
         </div>

         {{! Subject Button !}}
         <div class="btn-form col-sm-12">
            <button
               type="submit"
               class="btn btn-fill btn-block"
               id="review-form-submit">
               Add Review
            </button>
         </div>
      </div>
   </form>
</div>
<br />
<br />